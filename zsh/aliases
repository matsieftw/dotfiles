alias ls="exa -laxFG --extended --git"
alias vim='mvim -v'

# git aliases
alias gs="git status"
alias gco="git checkout"
alias gc="git commit -m"
alias ga="git add"
alias gr="git rebase"
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
